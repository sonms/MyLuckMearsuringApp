<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_activity.RouletteWheelActivity">

    <com.bluehomestudio.luckywheel.LuckyWheel
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:background_color="@color/white"
        app:image_padding="8dp"
        />

    <LinearLayout
        android:id="@+id/wheel_btn_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wheel"
        >
        <Button
            android:id="@+id/wheel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_layout"
            android:fontFamily="@font/pretendard_bold"
            android:text="돌려라!"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/wheel_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_layout"
            android:fontFamily="@font/pretendard_bold"
            android:visibility="gone"
            android:text="다음으로"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>